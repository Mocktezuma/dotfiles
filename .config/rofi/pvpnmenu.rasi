configuration {
    show-icons:true;
}
 
* {
    background-color: #00000000;
    text-color: #22d360;
    font:"3270SemiNarrow Nerd Font 50";
}
 
#window {
  children: [ horibox ];
  padding: 410 0 0 12%;
  width: 100%;
  height: 100%;
  background-color: #242424e3;

}
#horibox {
  children: [ listview ];
}
#listview {
  layout: horizontal;
  spacing: 100px;
  lines: 5;
}

#element {
  padding: 100px 20px 100px 0px;
  background-color: #0c051f00;
  border-radius: 200;
}
#element.selected {
  background-color: #22d360;
  text-color: #616161;
}

